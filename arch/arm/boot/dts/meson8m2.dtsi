#include "meson8b.dtsi"

/*
 * Meson8m2 (S812) seems to be derived from Meson8b, which means that most of
 * the internal IP blocks are identical. The following differences are known:
 * - uses Cortex-A9 (instead of Cortex-A5) cores
 * - octo-core (instead of quad-core) Mali 450 GPU
 * - 4k video resolution
 * - H.265/HEVC video decoding
 */

/ {
	compatible = "amlogic,meson8m2";
};

&cpu0 {
	compatible = "arm,cortex-a9";
	operating-points-v2 = <&meson8m2_cpu0_opp_table>;
};

&cpu1 {
	compatible = "arm,cortex-a9";
	operating-points-v2 = <&meson8m2_cpu0_opp_table>;
};

&cpu2 {
	compatible = "arm,cortex-a9";
	operating-points-v2 = <&meson8m2_cpu0_opp_table>;
};

&cpu3 {
	compatible = "arm,cortex-a9";
	operating-points-v2 = <&meson8m2_cpu0_opp_table>;
};

meson8m2_cpu0_opp_table: opp-table1 {
	compatible = "operating-points-v2";
	opp-shared;

	opp@96000 {
		opp-hz = /bits/ 64 <96000>;
		opp-microvolt = <825000>;
		clock-latency-ns = <8300000>;
	};
	opp@192000 {
		opp-hz = /bits/ 64 <192000>;
		opp-microvolt = <825000>;
		clock-latency-ns = <8300000>;
	};
	opp@312000 {
		opp-hz = /bits/ 64 <312000>;
		opp-microvolt = <825000>;
		clock-latency-ns = <8300000>;
	};
	opp@408000 {
		opp-hz = /bits/ 64 <408000>;
		opp-microvolt = <825000>;
		clock-latency-ns = <8300000>;
	};
	opp@504000 {
		opp-hz = /bits/ 64 <504000>;
		opp-microvolt = <825000>;
		clock-latency-ns = <8300000>;
	};
	opp@600000 {
		opp-hz = /bits/ 64 <600000>;
		opp-microvolt = <850000>;
		clock-latency-ns = <8300000>;
	};
	opp@720000 {
		opp-hz = /bits/ 64 <720000>;
		opp-microvolt = <850000>;
		clock-latency-ns = <8300000>;
	};
	opp@816000 {
		opp-hz = /bits/ 64 <816000>;
		opp-microvolt = <875000>;
		clock-latency-ns = <8300000>;
	};
	opp@1008000 {
		opp-hz = /bits/ 64 <1008000>;
		opp-microvolt = <925000>;
		clock-latency-ns = <8300000>;
	};
	opp@1200000 {
		opp-hz = /bits/ 64 <1200000>;
		opp-microvolt = <975000>;
		clock-latency-ns = <8300000>;
	};
	opp@1416000 {
		opp-hz = /bits/ 64 <1416000>;
		opp-microvolt = <1025000>;
		clock-latency-ns = <8300000>;
	};
	opp@1608000 {
		opp-hz = /bits/ 64 <1608000>;
		opp-microvolt = <1100000>;
		clock-latency-ns = <8300000>;
	};
	opp@1800000 {
		opp-hz = /bits/ 64 <1800000>;
		opp-microvolt = <1125000>;
		clock-latency-ns = <8300000>;
	};
	opp@1992000 {
		opp-hz = /bits/ 64 <1992000>;
		opp-microvolt = <1150000>;
		clock-latency-ns = <8300000>;
	};
};
